BASE = ..
#D:\P386

!IFDEF HOST_WIN32

LST = .\LSTNT
OBJ = .\OBJNT
MASMFLAGS = /DHOS=W32
LIB = $(BASE)\LIBNT

!ELSE
!IFDEF HOST_DOSX

LST = .\LST
OBJ = .\OBJ
MASMFLAGS = /DHOS=DOSX
LIB = $(BASE)\LIB

!ELSE
!IFDEF HOST_WIN32DLL

LST = .\LSTDLL
OBJ = .\OBJDLL
MASMFLAGS = /DHOS=W32D
LIB = $(BASE)\LIBDLL

!ENDIF
!ENDIF
!ENDIF

MASMFLAGS = $(MASMFLAGS) /c /Cp /Fl$(LST)\ /Sn /Zi /Fo$(OBJ)\ /I$(BASE)\COMMON


