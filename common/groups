GROUP_STRUCT	STRUC

_G_NEXT_HASH_GINDEX	DD	?
_G_NEXT_GROUP_GINDEX	DD	?	;NEXT GROUP IN SOME LIST ORDER

_G_FIRST_SEG_GINDEX	DD	?
_G_LAST_SEG_GINDEX	DD	?
_G_FRAME		DD	?	;OFFSET AND 0FFF0H IF REAL MODE, ELSE SEGMENT # & FLAGS
_G_OFFSET		DD	?	;OFFSET FROM FRAME (0) - OR REAL ADDRESS FOR REAL MODE
_G_LEN			DD	?	;LENGTH... AFTER ALIGN

_G_NUMBER		DD	?	;GROUP NUMBER...  FOR INTERNAL FIXUPPS AND CV NUMBERING
_G_NEXT_CV_GINDEX	DD	?	;

if	fg_prot
_G_OS2_NUMBER		EQU	(_G_FRAME)
_G_OS2_FLAGS		DD	?
endif

if	fg_plink
_G_SECTION_INDEX	DD	?
_G_PLTYPE		DB	?	;(PLTYPES RECORD)
			DB	?
else
			DW	?
endif

_G_TYPE 		DB	?	;UNDEF, ASEG, RELOC, ETC
_G_TYPE1		DB	?	;CODE OR DATA	(GREC) 16/32, ETC

_G_HASH			DD	?
_G_TEXT			DD	?

GROUP_STRUCT	ENDS	;***** MUST BE EVEN WORDS *****

GREC		RECORD	GROUP_IS_USE16:1,GROUP_IS_USE32:1,GROUP_IS_FLAT:1,GROUP_IS_DGROUP:1,GROUP_IS_CODE:1,GROUP_IS_DATA:1

